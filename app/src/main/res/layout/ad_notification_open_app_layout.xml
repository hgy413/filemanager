<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
	<!-- 图标  -->     
	<ImageView android:id="@+id/image" android:layout_width="46dp" android:layout_height="46dp" android:layout_centerVertical="true" android:layout_marginLeft="14dp" 
	    android:scaleType="fitXY" /> 
	<!-- 通知栏消息区域 -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center_vertical" android:orientation="vertical" android:layout_marginLeft="12dp" 
        android:layout_marginRight="8dp" android:layout_toRightOf="@id/image">
        <!-- 标题 -->
        <TextView android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#FCFCFC" android:textSize="18sp" android:textStyle="bold" android:singleLine="true"/>  
        <!-- 内容   -->
        <TextView android:id="@+id/text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#9D9D9D" android:maxLines="2" android:textSize="16sp" />  
    </LinearLayout>
